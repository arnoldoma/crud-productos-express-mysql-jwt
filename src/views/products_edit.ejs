<%- include('partials/header'); %>
<%- include('partials/navbar'); %>

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <h2 class="text-center mt-3">Actualizar producto</h2>
                    <div class="card-body">
                        <form action="/products/update/<%= product.id %>" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="nombre">Nombre Producto</label>
                                <input type="text" name="nombre" value="<%= product.nombre %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="precio">Precio producto</label>
                                <input type="text" name="precio" value="<%= product.precio %>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="urlImagen">Imagen</label>
                                <input type="file" name="urlImagen" value="/products/<%= product.urlImagen %>" class="form-control">
                                <!-- <button> X </button> -->
                                <div>
                                    <img src="/products/<%= product.urlImagen %>" alt="<%= product.nombre %>" class="rounded" width="100">
                                    
                                </div> 
                            </div>

                            <button type="submit" class="btn btn-primary">Actualizar</button>
                            <a href="/products" class="btn btn-danger">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>,
        }).then(() => {
                    window.location = '/<%= ruta %>'
                })
        </script>
        <% } %>
    <%- include('partials/footer'); %>